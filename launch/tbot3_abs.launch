<launch>
    <node
        pkg="turtlebot3_teleop"
        type="turtlebot3_teleop_key"
        name="teleop_key"
        launch-prefix="xterm -e"
    >
        <remap
            from="cmd_vel"
            to = "teleop_vel"
        />
    </node>
    <node
        pkg="teleop_abs"
        type="filter_scan.py"
        name="filter_abs"
        launch-prefix="xterm -e"
    />
    <node
        pkg="teleop_abs"
        type="abs_control.py"
        name="abs_control"
        launch-prefix="xterm -e"
    />
</launch>